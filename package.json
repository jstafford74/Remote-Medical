{
  "name": "remote_medical",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "seed": "node scripts/seedDB.js",
    "install": "cd client && npm install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build && npm run seed"
  },
  "dependencies": {
    "auth0-js": "^9.13.0",
    "auth0-lock": "^11.22.5",
    "axios": "^0.19.2",
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.0.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "emailjs": "^2.2.0",
    "emailjs-com": "^2.4.1",
    "events": "^3.1.0",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "express-session": "^1.17.0",
    "gridfs-stream": "^1.1.1",
    "highlight.js": "^9.18.1",
    "if-env": "^1.0.4",
    "jwks-rsa": "^1.7.0",
    "method-override": "^3.0.0",
    "mongodb": "^3.5.5",
    "mongoose": "^5.9.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "multer-gridfs-storage": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "passport": "^0.4.1",
    "passport-auth0": "^1.3.2",
    "randomstring": "^1.1.5"
  },
  "devDependencies": {
    "nodemon": "^2.0.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
